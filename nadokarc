  ###############################################
  # Directory
  Log_dir     = './log'

  Plugins_dir = './plugins'
  # You can set Plugins_dir as Enumerable object.
  # ex: ['./dir1', './dir2', ...]


  ###############################################
  # Bots
  BotConfig = [
    # :BotName1,
